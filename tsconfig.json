{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2016",
    "lib": ["es6", "ES2021.String"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@routes/*": ["src/routes/*"],
      "@prompts/*": ["src/prompts/*"],
      "@helpers/*": ["src/helpers/*"],
      "@schemas/*": ["src/schemas/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@/*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@config": ["config.ts"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist/esm",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "browser-extension"]
}
