{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2016",
    "lib": ["es6"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["assets/*"],
      "@schemas/*": ["src/schemas/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist/esm",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "browser-extension"]
}
